{
    "name": "bare-lsp",
    "displayName": "bare-lsp",
    "description": "Simple lsp server",
    "version": "0.0.1",
    "publisher": "hzeller",
    "repository": {
        "type": "git",
        "url": "https://github.com/hzeller/bare-lsp.git"
    },
    "engines": {
        "vscode": "^1.61.0"
    },
    "activationEvents": [
        "onLanguage:plaintext"
    ],
    "categories": [
        "Other"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Bare LSP configuration",
            "properties": {
                "languageBareLSP.serverPath": {
                    "scope": "workspace",
                    "type": "string",
                    "default": "path/to/my/lsp-server",
                    "description": "Specify the path to the lsp-server binary."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p -w . --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
		"vsix": "vsce package -o bare-lsp.vsix"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.61.0",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "@typescript-eslint/parser": "^4.31.1",
        "@vscode/test-electron": "^1.6.2",
        "eslint": "^7.32.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.1",
        "ts-loader": "^9.2.5",
        "typescript": "^4.4.3",
        "webpack": "^5.52.1",
        "webpack-cli": "^4.8.0",
        "vsce": "^1.100.1"
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    }
}
